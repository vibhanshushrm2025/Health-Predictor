<!DOCTYPE html>
<html>

<head>
    <title>Blood Report Form</title>
    <link rel="stylesheet" href="/bloodreport.css">
</head>

<body>
    <form id="msform">
        <!-- progressbar -->
        <ul id="progressbar">
            <li class="active">Haemoglobin</li>
            <li>DLC</li>
            <li>ALC</li>
        </ul>
        <!-- fieldsets -->
        <fieldset>
            <h2 class="fs-title">Haemoglobin (Hb) <img src="/noto_drop-of-blood.png" alt="" width="18px"></h2>
            <h3 class="fs-subtitle">This is step 1</h3>
            <input type="number"  placeholder="Packed cell volume (&percnt;)" />
            <input type="number"  placeholder="RBC count (Million/cu.mm)" />
            <input type="number"  placeholder="Mean Corpuscular volume (fL) " />
            <input type="number" placeholder="Mean Corpuscualr Haemoglobin (pg)" />
            <input type="number" placeholder="Mean Corpuscular Hb Concentration (g/dL)" />
            <input type="number" placeholder="Red Cell Distribution width" />
            <input type="number" placeholder="Total Leucocyte count (TLC &percnt;)" />
            <input type="button" name="next" class="next action-button" value="Next" />
        </fieldset>
        <fieldset>
            <h2 class="fs-title">Differential Leucocyte Count <img src="/openmoji_blood-transfusion.png" alt="" width="30px"></h2>
            <input type="number"  placeholder="Neutrophils (&percnt;)" />
            <input type="number" placeholder="Lymphocytes (&percnt;)" />
            <input type="number" placeholder="Monocytes (&percnt;)" />
            <input type="number" placeholder="Eosinophils (&percnt;)" />
            <input type="number" placeholder="Basophils (&percnt;)" />
            <input type="button" name="previous" class="previous action-button" value="Previous" />
            <input type="button" name="next" class="next action-button" value="Next" />
        </fieldset>
        <fieldset>
            <h2 class="fs-title">Absolute Leucocyte Count <img src="/download.png" alt="" width="50px"></h2>
            <input type="number" placeholder="Neutrophils ( Cells/cu.mm )" />
            <input type="number" placeholder="Lymphocytes ( Cells/cu.mm )" />
            <input type="number" placeholder="Monocytes ( Cells/cu.mm )" />
            <input type="number" placeholder="Eosinophils ( Cells/cu.mm )" />
            <input type="number" placeholder="Platelets Count ( per cu.mm )" />
            <input type="number" placeholder="Mean Platelets volume ( fL )" />
            <input type="number" placeholder="ESR ( mm )" />
            <input type="button" name="previous" class="previous action-button" value="Previous" />
            <a href="/" class="submit action-button" target="_top">Submit</a>
        </fieldset>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
        <script src="/bloodreport.js"></script>
    </form>
</body>

</html>